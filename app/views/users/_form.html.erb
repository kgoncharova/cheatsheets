<%= form_with(model: @user, local: true) do |f| %>
  <div class="container">
    <%= render "partials/form_errors", object: @user %>

    <div class="has-text-centered">
      <%= gravatar_for(@user) %><br>
      <%= link_to "Update Gravatar image", "https://www.gravatar.com/", target: "_blank" %>
    </div>

    <div class="field">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, class: "input", autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label :location, class: "label" %>
      <%= f.text_field :location, class: "input" %>
    </div>

    <div class="field">
      <%= f.label "Tell us about yourself", class: "label" %>
      <%= f.text_area :bio, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input", autocomplete: "email" %>
    </div>

    <div class="buttons">
      <%= f.submit "Update Account", class: "button is-success" %>
      <%= link_to "Change password", edit_user_registration_path, class: "button is-danger" %>
    </div>
  </div>
<% end %>
