<%= form_with(model: @cheatsheet, local: true) do |f| %>
  <div class="container">
    <%= render "partials/form_errors", object: @cheatsheet %>

    <div class="field">
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title, class: "input", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_area :body, class: "input", rows: "10", placeholder: "Enter your text here", class:"textarea" %>
    </div>

    <div class="buttons">
      <%= link_to "Back", :back, class: "button is-danger" %>
      <%= f.submit "Save", class: "button is-success" %>
    </div>
  </div>
<% end %>
