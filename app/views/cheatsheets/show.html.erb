<section class="section">
  <h1 class="title has-text-centered"><%= @cheatsheet.title %></h1>
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <%= @cheatsheet.created_at.strftime("%B %d, %Y") %><br />
      <%= @cheatsheet.body %><br />
      <%= link_to @cheatsheet.user.username %><br />
      <%= link_to "Edit", edit_cheatsheet_path(@cheatsheet) %>
      <%= link_to "Delete", cheatsheet_path(@cheatsheet),method: :delete,
                             data:{confirm: "Are you sure?"} %>
    </div>
  </div>
</section>