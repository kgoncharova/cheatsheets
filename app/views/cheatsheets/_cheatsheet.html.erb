<div class="column is-3">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title"><%= link_to truncate(cheatsheet.title, length: 50, separator: ' '), cheatsheet %></p>
    
      <div>
        <% unless current_user.favorited_cheatsheets.exists?(id: cheatsheet.id) %>
          <%= link_to favorites_path(cheatsheet_id: cheatsheet), method: :post, class: "navbar-item #{current_class?(favorites_path)}" do %>
            <span class="icon is-small has-text-grey">
              <i class="far fa-bookmark"></i>
            </span>
          <% end %>
        <% else %>
          <%= link_to favorite_path(cheatsheet), method: :delete, class: "navbar-item #{current_class?(favorites_path)}" do %>
            <span class="icon is-small has-text-danger">
              <i class="fas fa-bookmark"></i>
            </span>
          <% end %>
        <% end %>
      </div>
    </header>
    <div class="card-content">
      <div class="content">
        <p><small><strong>Author:</strong> <%= link_to cheatsheet.user.username, cheatsheet.user %></small></p>
        <div>
          <p><small><strong>Created: </strong><%= cheatsheet.created_at.strftime("%B %d, %Y") %></small></p>
        </div>
        <p><small>#hashtags</small></p>
      </div>
    </div>
  </div>
</div>
